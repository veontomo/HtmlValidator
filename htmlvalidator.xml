  </target>
  
  <!-- Modules -->
  
  
  <!-- Module HtmlValidator -->
  
  <dirname property="module.htmlvalidator.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.htmlvalidator" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.htmlvalidator" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.htmlvalidator" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.htmlvalidator" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="htmlvalidator.output.dir" value="${module.htmlvalidator.basedir}/out/production/HtmlValidator"/>
  <property name="htmlvalidator.testoutput.dir" value="${module.htmlvalidator.basedir}/out/test/HtmlValidator"/>
  
  <path id="htmlvalidator.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="htmlvalidator.module.production.classpath">
    <path refid="${module.jdk.classpath.htmlvalidator}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="htmlvalidator.runtime.production.module.classpath">
    <pathelement location="${htmlvalidator.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="htmlvalidator.module.classpath">
    <path refid="${module.jdk.classpath.htmlvalidator}"/>
    <pathelement location="${htmlvalidator.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="htmlvalidator.runtime.module.classpath">
    <pathelement location="${htmlvalidator.testoutput.dir}"/>
    <pathelement location="${htmlvalidator.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.htmlvalidator">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.htmlvalidator">
    <patternset refid="excluded.from.module.htmlvalidator"/>
  </patternset>
  
  <path id="htmlvalidator.module.sourcepath">
    <dirset dir="${module.htmlvalidator.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.htmlvalidator" depends="compile.module.htmlvalidator.production,compile.module.htmlvalidator.tests" description="Compile module HtmlValidator"/>
  
  <target name="compile.module.htmlvalidator.production" depends="register.custom.compilers" description="Compile module HtmlValidator; production classes">
    <mkdir dir="${htmlvalidator.output.dir}"/>
    <javac2 destdir="${htmlvalidator.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.htmlvalidator}/javac">
      <compilerarg line="${compiler.args.htmlvalidator}"/>
      <bootclasspath refid="htmlvalidator.module.bootclasspath"/>
      <classpath refid="htmlvalidator.module.production.classpath"/>
      <src refid="htmlvalidator.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.htmlvalidator"/>
    </javac2>
    
    <copy todir="${htmlvalidator.output.dir}">
      <fileset dir="${module.htmlvalidator.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.htmlvalidator.tests" depends="register.custom.compilers,compile.module.htmlvalidator.production" description="compile module HtmlValidator; test classes" unless="skip.tests"/>
  
  <target name="clean.module.htmlvalidator" description="cleanup module">
    <delete dir="${htmlvalidator.output.dir}"/>
    <delete dir="${htmlvalidator.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.htmlvalidator" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.htmlvalidator" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
